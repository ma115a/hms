<UserControl x:Class="BazeProject.AddPatientNurse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BazeProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFDFDFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

		<TextBlock Text="Patient UMCN:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>
		<TextBox Name="Umcn" Grid.Column="1" Grid.Row="0" Height="25" Width="250" FontSize="14" VerticalContentAlignment="Center"/>
		<TextBlock Text="Patient Name:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>
		<TextBox Name="Name" Grid.Column="1" Grid.Row="1" Height="25" Width="250" FontSize="14" VerticalContentAlignment="Center"/>
		<TextBlock Text="Patient Lastname:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>
		<TextBox Name="Lastname" Grid.Column="1" Grid.Row="2" Height="25" Width="250" FontSize="14" VerticalContentAlignment="Center"/>
		<TextBlock Text="Patient Phone:" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>
		<TextBox Name="Phone" Grid.Column="1" Grid.Row="3" Height="25" Width="250" FontSize="14" VerticalContentAlignment="Center"/>
		<Button Content="Add Patient" Height="25" Grid.Row="4" Grid.Column="1" Margin="0,16,0,9" Background="#FF8CA06A" Width="198" FontSize="14" Click="AddPatient_Click" FontWeight="Bold" Cursor="Hand"/>
		<Label Name="StatusLabel" Content="" Grid.Row ="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFDF2A2A" FontSize="14" FontWeight="Bold"/>
	</Grid>
</UserControl>
