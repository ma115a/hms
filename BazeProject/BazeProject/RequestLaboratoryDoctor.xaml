<UserControl x:Class="BazeProject.RequestLaboratoryDoctor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BazeProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFFDFDFC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select tehnician:" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
        <ComboBox Name="TehnicianCombo" Grid.Row="2" Grid.Column="1" Text="" Width="300" Height="25" IsEditable="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14">

        </ComboBox>
        <TextBlock Text="Enter Description:" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
        <TextBox Name="DescriptionBox" Grid.Row="3" Grid.Column="1" Height="25" Width="300" FontSize="14"/>
        <Button Content="Reqesty Laboratory" Grid.Row="4" Grid.Column="1" Height="25" Width="200" FontSize="14" FontWeight="Bold" Background="#FF8CA06A" Click="RequestLaboratory_Click" Cursor="Hand"/>
        <Label Name="StatusLabel" Content="" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="#FFDE2A2A" FontWeight="Bold"/>
    </Grid>
</UserControl>
