<UserControl x:Class="BazeProject.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BazeProject"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1300">
        <Grid Background="#FFFCFDFB">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2.5*"/>
            </Grid.RowDefinitions>
            <Label Content="HMS" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="46" FontWeight="Bold" Foreground="#FF0D0E09"/>
            <Label Content="Username" Grid.Row="1" Grid.Column="1" FontSize="20" VerticalAlignment="Bottom" Margin="0,5,0,0" Foreground="#FF0D0E09"/>
            <TextBox x:Name="UsernameTextBox" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="33" VerticalContentAlignment="Center" Background="#FFA9C8B0" FontSize="14"/>
            <Label Content="Password" Grid.Row="3" Grid.Column="1" FontSize="20" VerticalAlignment="Bottom" Margin="0,5,0,0" Foreground="#FF0D0E09"/>
            <PasswordBox x:Name="PasswordTextBox" Grid.Row="4" Grid.Column="1" Height="32" VerticalContentAlignment="Center" Background="#FFA9C8B0" FontSize="14"/>
            <Button Grid.Row="5" Grid.Column="1" Content="Login" FontSize="16" Height="40" Margin="27,11,27,11" Background="#FF8BA06A" Foreground="#FF0D0E09" FontWeight="Bold"  Click="LoginButton_Click" Cursor="Hand"/>
        <Label x:Name="ErrorLabelLogin" Grid.Column="1" Grid.Row="6" Content="" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Foreground="#FFE84141"/>
    </Grid>
</UserControl>
